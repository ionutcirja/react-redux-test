{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "globals": {
    "document": true,
    "window": true,
    "describe": true,
    "it": true,
    "beforeEach": true,
    "afterEach": true,
    "expect": true,
    "require": true,
    "jest": true,
    "Generator": false
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "react/forbid-prop-types": 0,
    "import/prefer-default-export": false,
    "prefer-promise-reject-errors": 0
  }
}
